{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn tsc --build && yarn compile && yarn tsc --build",
    "test": "yarn jest",
    "clean": "yarn tsc --build --clean",
    "compile": "yarn ts-node ./packages/foundationdb-compiler/src/main.ts ./packages/foundationdb-entity-specs/src/atomic.schema.ts ./packages/foundationdb-entity-specs/src/atomic.repo.ts",
    "coverage": "yarn jest --coverage",
    "release": "yarn clean && yarn build && yarn test && yarn lerna publish --force-publish",
    "prepare": "patch-package"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "jest": "^23.6.0",
    "lerna": "^3.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@openland/context": "*",
    "@openland/log": "*",
    "@types/node": "^12.0.7",
    "foundationdb": "0.10.2",
    "patch-package": "^6.1.2",
    "ts-node": "^8.3.0",
    "uuid": "^3.2.1",
    "@types/change-case": "^2.3.1",
    "change-case": "^3.1.0"
  }
}
